<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FloatingActionButton">
        <attr name="mFab_colorPressed" format="color"/>
        <attr name="mFab_colorDisabled" format="color"/>
        <attr name="mFab_colorNormal" format="color"/>
        <attr name="mFab_icon" format="reference"/>
        <attr name="mFab_size" format="enum">
            <enum name="normal" value="0"/>
            <enum name="mini" value="1"/>
        </attr>
        <attr name="mFab_title" format="string"/>
        <attr name="mFab_stroke_visible" format="boolean"/>
    </declare-styleable>
    <declare-styleable name="MAddFloatingActionButton">
        <attr name="mFab_plusIconColor" format="color"/>
    </declare-styleable>
    <declare-styleable name="MFloatingActionsMenu">
        <attr name="mFab_addButtonColorPressed" format="color"/>
        <attr name="mFab_addButtonColorNormal" format="color"/>
        <attr name="mFab_addButtonSize" format="enum">
            <enum name="normal" value="0"/>
            <enum name="mini" value="1"/>
        </attr>
        <attr name="mFab_addButtonPlusIconColor" format="color"/>
        <attr name="mFab_addButtonStrokeVisible" format="boolean"/>
        <attr name="mFab_labelStyle" format="reference"/>
        <attr name="mFab_labelsPosition" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
        <attr name="mFab_expandDirection" format="enum">
            <enum name="up" value="0"/>
            <enum name="down" value="1"/>
            <enum name="left" value="2"/>
            <enum name="right" value="3"/>
        </attr>
    </declare-styleable>
</resources>